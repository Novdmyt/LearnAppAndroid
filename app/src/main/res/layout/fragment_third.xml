<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ThirdFragment">

    <Spinner
        android:id="@+id/tableSpinner"
        android:layout_width="355dp"
        android:layout_height="49dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/loadAllTablesSwitch"
        android:layout_width="287dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:text="Load All Tables"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tableSpinner" />

    <Switch
        android:id="@+id/randomOrderSwitch"
        android:layout_width="287dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:text="Random Order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loadAllTablesSwitch" />

    <EditText
        android:id="@+id/translateEditText"
        android:layout_width="348dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:hint="Translation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/randomOrderSwitch" />

    <EditText
        android:id="@+id/wordTextView"
        android:layout_width="347dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:hint="Word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/translateEditText" />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wordTextView" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
